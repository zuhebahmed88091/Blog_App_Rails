<div class="container">
    <% @users.each do |user| %>
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row g-0">
                <div class="col-md-4">
                    <img src =<%= user.photo %> class="img-fluid rounded" alt="Profile picture">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title"><%= link_to user.name, user_path(user) %></h5>
                        <p class="card-text"><small class="text-muted">Number of posts: <%= user.post_counter %></small></p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>
</div>